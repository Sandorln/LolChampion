<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable name="champion" type="com.sandorln.champion.data.CharacterData"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="240dp"
            android:background="#000000"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_champ_skin"
                app:layout_constraintHorizontal_weight="0.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_champ_info"
                android:layout_width="0dp"
                android:layout_height="200dp"/>

        <LinearLayout
                android:orientation="vertical"
                app:layout_constraintHorizontal_weight="0.6"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/layout_champ_info"
                app:layout_constraintStart_toEndOf="@+id/vp_champ_skin"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="200dp">
            <TextView
                    style="@style/champion_info_tx_style"
                    android:text="@{@string/champion_info_title(champion.CTitle)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    style="@style/champion_info_tx_style"
                    android:text='@{champion.CName}'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    style="@style/champion_info_tx_style"
                    android:text='@{"TAG " + champion.CTags}'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        style="@style/champion_info_tx_style"
                        android:text='@{champion.CBlurb}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>