<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="act" type="com.sandorln.champion.view.main.MainActivity"/>
        <variable name="vm" type="com.sandorln.champion.view.main.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:background="#000000"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            app:layout_collapseMode="parallax"
                            android:src="@drawable/lol_log"
                            android:id="@+id/img_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_champ_info"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/layout_small_champ_info"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/rv_champions"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        bind:listitem="@layout/item_champion_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                <include
                        android:layout_height="200dp"
                        android:layout_width="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_champions"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/layout_small_champ_info"
                        layout="@layout/include_small_champ_info"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include
                bind:isLoading="@{vm.isLoading}"
                layout="@layout/a_loading"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>